    <li class="nav-item">
      <%= link_to "Create a gossip", {controller: "gossips", action: "new"}, class: "nav-link" %>
    </li>

    <li class="nav-item">
        <%= link_to "Team", static_pages_team_path, class: "nav-link" %>
    </li>
